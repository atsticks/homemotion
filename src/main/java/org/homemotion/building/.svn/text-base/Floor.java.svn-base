package org.homemotion.building;

import java.io.Serializable;
import java.util.ArrayList;
import java.util.Collection;
import java.util.List;

import org.homemotion.dao.spi.AbstractConfiguredItem;

public class Floor extends AbstractConfiguredItem implements Serializable {

	private static final long serialVersionUID = 8244699449321737136L;

	private Building building;
	private List<Room> rooms = new ArrayList<Room>();
	
	public Floor(String id, String binding) {
		super(id, binding);
	}

	public final void addRoom(Room room) {
		if(!this.rooms.contains(room)){
			rooms.add(room);
			room.setFloor(this);
		}
	}

	public final Collection<Room> getRooms() {
		return rooms;
	}

	public Building getBuilding() {
		return building;
	}

	public void setBuilding(Building building) {
		this.building = building;
	}

}
